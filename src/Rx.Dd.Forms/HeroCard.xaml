<?xml version="1.0" encoding="utf-8"?>

<xamForms:ReactiveViewCell xmlns="http://xamarin.com/schemas/2014/forms"
                           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:xamForms="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                           xmlns:dd="clr-namespace:Rx.Dd;assembly=Rx.Dd.ViewModel"
                           x:Class="Rx.Dd.Forms.HeroCard"
                           x:DataType="dd:Hero"
                           x:TypeArguments="dd:Hero" >
    <Grid RowDefinitions="*, *, *"
          ColumnDefinitions="*, *"
          Margin="4"
          RowSpacing="8"
          ColumnSpacing="8"
          HeightRequest="80">
        <Image x:Name="Avatar" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" />
        <Label x:Name="Name" Grid.Row="1" Grid.Column="1" />
    </Grid>
</xamForms:ReactiveViewCell>